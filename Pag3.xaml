<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto7.Pag3"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Pag3" BackgroundColor="Transparent">
    <VerticalStackLayout>
        <toolkit:MediaElement x:Name="media" ShouldAutoPlay="True"
                          Source="embed://jujutsu.mp4"
                          WidthRequest="300"
                          HeightRequest="400"/>
        <Button Text="PLAY" Clicked="Btplay"/>
        <Button Text="PAUSE" Clicked="Btpause"/>
        <Button Text="STOP" Clicked="Btstop"/>
    </VerticalStackLayout>
</ContentPage>